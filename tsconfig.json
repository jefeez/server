{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": "./src",

    "paths": {
      "@modules/*":["./app/modules/*"],
      "@providers/*":["./providers/*"],
      "@middlewares/*":["./app/middlewares/*"],
      "@core/*":["./core/*"],
      "@env/*":["./env/*"]
    },
    "lib": ["esnext"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": false,
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true
  }
}
